{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "lib": ["es6", "esnext", "es2015"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "removeComments": true,
    "rootDir": "src",
    "strict": true,
    "target": "es6"
  },
  "exclude": ["/node_modules", "./**/*.test.ts"],
  "include": ["./src/**/*.ts", "./src/**/*.json"]
}
